model <- lm(price ~ duration, data = flights)

summary(model)

residuals <- resid(model)

hist(residuals,
     main = "Histogram of Residuals",
     xlab = "Residuals")

plot(flights$price, residuals,
     xlab = "Observed Flight Price",
     ylab = "Residuals",
     main = "Residuals vs Observed Flight Price")
